{
  "compilerOptions": {
    "module": "es2015",
    "paths": {
      "@/*": ["src/app/*"]
    },
    "strict": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "plugins": [
      {
        "name": "vue-ts-plugin"
      }
    ],
    "sourceMap": true
  },
  "compileOnSave": false,
  "include": [
    "src/app/**/*.ts",
    "src/types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
